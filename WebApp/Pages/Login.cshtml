@page
@model WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserLogin.Email" class="control-label"></label>
                <input asp-for="UserLogin.Email" class="form-control"/>
                <span asp-validation-for="UserLogin.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLogin.Password" class="control-label"></label>
                <input asp-for="UserLogin.Password" class="form-control"/>
                <span asp-validation-for="UserLogin.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"/>
                <a class="btn btn-primary" asp-page="./Create">Registration</a>
            </div>
        </form>
    </div>
</div>